@page
@model CASPAR.Pages.Admin.FundingSources.UpsertModel
@{
    Layout = "_LayoutAdministration";
    ViewData["Title"] = $"{(Model.FundingSource.Id == 0 ? "Add" : "Edit")} Funding Source";
}

<h1>@(Model.FundingSource.Id == 0 ? "Add" : "Edit") Funding Source</h1>

<form method="post" class="form">
    <fieldset class="form-fields">
        <div class="form-group">
            <label asp-for="FundingSource.PayOrgTitle"></label>
            <input asp-for="FundingSource.PayOrgTitle" />
            <span asp-validation-for="FundingSource.PayOrgTitle" class="text-sm text-red-600"></span>
        </div>
    </fieldset>

    <div class="form-actions">
        @if (Model.FundingSource.Id != 0)
        {
            <input asp-for="FundingSource.Id" type="hidden" />
        }
        <a asp-area="" asp-page="Index" class="btn">Cancel</a>
        <button type="submit" class="btn btn-success icon-check">Save</button>
    </div>
</form>